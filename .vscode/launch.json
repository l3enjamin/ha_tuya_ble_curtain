    "version": "0.2.0",
    "configurations": [
      {
        // Example of attaching to local debug server
        "name": "Python: Attach Local",
        "type": "python",
        "request": "attach",
        "justMyCode": false,
        "port": 5678,
        "host": "127.0.0.1", // same as the browser that was opened by Docker Desktop.
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "."
          }
        ]
      }
    ]
  }